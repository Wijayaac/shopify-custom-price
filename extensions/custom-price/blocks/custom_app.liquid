{% comment %} // TODO: create layout for popup  {% endcomment %}
{{ 't11-popup.css' | asset_url | stylesheet_tag }}

<div class="t11-popup-container">
  <div class="t11-popup-overlay">
    <span>Popup overlay</span>
  </div>
  <div class="t11-popup">
    <div class="t11-popup-close">
      <button>&times;</button>
    </div>
    <div class="t11-popup-image">
      {% if block.settings.background_image != blank %}
        {{
          block.settings.background_image
          | image_url: width: 480
          | image_tag: sizes: sizes, widths: '50, 75, 100, 150, 200, 300, 400, 500'
        }}
      {% else %}
        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
    <div class="t11-popup-content">
      {% if block.settings.heading != blank %}
        <div class="t11-popup-title">
          <h2 class="{{ block.settings.heading_size }}">
            {{ block.settings.heading }}
          </h2>
        </div>
      {% endif %}
      {% if block.settings.content != blank %}
        <div class="t11-popup-description">
          {{ block.settings.content }}
        </div>
      {% endif %}
      {% if block.settings.button_label != blank and block.settings.button_link != blank %}
        <div class="t11-popup-button">
          {{ block.settings.button_label | link_to: block.settings.button_link }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
<script src="{{ 't11-popup.js' | asset_url }}" defer="defer"></script>
{% schema %}
{
  "name": "App Embed",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New Year Sale"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        }
      ],
      "default": "h2"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ]
}
{% endschema %}
